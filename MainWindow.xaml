<Window x:Class="_6thMeet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6thMeet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF2168DF"/>
                <GradientStop Color="White" Offset="0.994"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="BtnOpen" Content="開啟檔案" HorizontalAlignment="Center" Height="47" Margin="19,26,666.6,347" VerticalAlignment="Center" Width="108" FontSize="16" Background="White" Click="BtnOpen_Click"/>
        <Button x:Name="BtnSave" Content="存檔" HorizontalAlignment="Center" Height="47" Margin="132,26,553.6,347" VerticalAlignment="Center" Width="108" FontSize="16" Background="White" Click="BtnSave_Click"/>
        <RichTextBox x:Name="RtbText" HorizontalAlignment="Left" Height="323" Margin="19,78,0,0" VerticalAlignment="Top" Width="748" FontSize="14">
            <FlowDocument/>
        </RichTextBox>

    </Grid>
</Window>
